<?xml version="1.0"?>

<html metal:use-macro="sitemacros/macros/ecomap">

	<div metal:fill-slot="content" id="content">
	
		<div id="breadcrumbbar">
		<span class="here">You are Here:</span>  
			<a href="/course/">
				My Courses
			</a>
			&gt; 
			Edit Course
		</div>
		
		<metal:block define-macro="message">
			<div tal:condition="message" tal:content="message" class="message" />
		</metal:block>
		
		<div id="container">
		
			<h2>
				Edit Course
			</h2>
			
			<form action="edit" method="post">
			
			<fieldset>
			
			<legend>
			Course Information
			</legend>
			
			<label for="name">Name:</label><input id="name" type="text" name="name" />
			<form:iferror name="name">
			<span class="errormessage">
			<form:error name="name" />
			</span>
			</form:iferror>
			<br />
			<br />
			<label for="desc">Description:</label><textarea id="desc" type="text" name="description"></textarea>
			<form:iferror name="description">
			<span class="errormessage">
			<form:error name="description" />
			</span>
			</form:iferror>
			<br />
			<br />
			<tal:block condition="is_admin">
			    <label for="instid">Instructor ID:</label> 
			    <select id="instid" tal:condition="is_admin" name="instructor">
			    <tal:block repeat="i all_instructors">
			    <option tal:attributes="value i/id" tal:content="string:${i/firstname} ${i/lastname}" />
			    </tal:block>
			    </select>
			    <br />
			    <br />
			</tal:block>
			<input type="hidden" tal:condition="python:not is_admin" tal:attributes="value course/instructor/id" name="instructor" />
			<label for="savebutton"></label>
			<input id="savebutton" type="submit" value="Update Course Information" />
			
			</fieldset>
			
			</form>
		
		</div>
	
	</div>
	

</html>
