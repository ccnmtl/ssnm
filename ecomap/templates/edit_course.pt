<?xml version="1.0"?>
<html metal:use-macro="sitemacros/macros/ecomap">

    <div metal:fill-slot="content" id="content">

        <div id="breadcrumbs">
            <a href="/course">my courses</a> > <span tal:content="courseName" />
        </div>

        <form action="edit" method="post">
        <fieldset>
            <legend>Edit Course</legend>
            <label>Name: <input type="text" name="name" size="30" /></label><form:iferror name="name"> <span class="errormessage"><form:error name="name" /></span></form:iferror><br />
            <label>Description: <input type="text" name="description" size="60" /></label><form:iferror name="description"> <span class="errormessage"><form:error name="description"/></span></form:iferror><br />
            <label tal:condition="isAdmin">Instructor ID: 
            
            <select name="instructor">
            <tal:block repeat="i allInstructors">
                <option tal:attributes="value i/id" tal:content="string:${i/firstname} ${i/lastname}" />
            </tal:block>
            </select></label>
            <br/>
                        
            <input type="hidden" tal:condition="python:not isAdmin" tal:attributes="value course/instructor/id" name="instructor"/>
            <input type="submit" value="Save"/>
        </fieldset>
        </form>

    </div>

</html>
