<?xml version="1.0"?>
<html metal:use-macro="sitemacros/macros/ecomap">
<body metal:fill-slot="body">
<div id="header"><img src="/images/logo.png" /></div>

<div id="logout">You are logged in as <span tal:content="loginName"/> <a href="/logout">Log Out</a></div>
<metal:block use-macro="sitemacros/macros/message" />
<p/>
<form tal:attributes="action postTo" method="post">

<p>Add student by UNI:<input type="text" name="student_uni" width="10" /><input type="submit" name="action" value="Add Student" /></p>
<a href="/course">my courses</a> > <span tal:content="courseName" />

<h1>Students</h1>

<table tal:condition="students">
<tr><th></th><th>First Name</th><th>Last Name</th><th>UNI</th></tr>
<tr tal:repeat="student students">
<td><input type="checkbox" name="student_id" tal:attributes="value string:${student/id}"/></td>
<td tal:content="student/firstname" />
<td tal:content="student/lastname" />
<td tal:content="student/uni" />
</tr>
</table>

<input tal:condition="students" type="submit" name="action" value="Delete Selected" onclick="return confirm('Are you sure you want to delete the selected items??');"/>


</form>

</body>
</html>
