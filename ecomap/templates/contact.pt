<?xml version="1.0"?>

<html metal:use-macro="sitemacros/macros/ecomap">

    <metal:block fill-slot="js_slot"><script src="/js/validate_feedback.js" type="text/javascript"></script></metal:block>

	<div metal:fill-slot="content" id="content">
		
		<div id="breadcrumbbar">
		<span class="here">You are Here:</span>  
			<a href="/course/">
				My Courses
			</a>
			&gt; 
			Contact Information
		</div>
		
		<metal:block define-macro="message">
			<div tal:condition="message" tal:content="message" class="message" />
		</metal:block>
		
		<div id="container">
			
			<h2>
				Contact Information
			</h2>
			
			<div id="text">
			<p>If you have comments, suggestions, or questions about this site, or are having a problem using it, please contact us using the following form.</p>
			</div>

            <div id="errorform">
                
                <form action="http://pmt.ccnmtl.columbia.edu/external_add_item.pl" method="post" name="feedback" onSubmit="return validate()">
                
                <fieldset>
    			    <legend>Send Feedback</legend>
                    <label for="name">Your Name:</label><input type="text" id="name" name="name" value=""/><br/><br/>
                    <label for="email">Your Email address:</label><input type="text" id="email" name="email" value=""/><br/><br/>
                    <label for="description">Comment or Problem:</label><textarea id="description" name="description" rows="5" cols="50"></textarea><br/><br/>
                    <input type="submit" name="add item" value="Send Feedback"/>
                    <input type="hidden" name="title" value="Error report from SSNM web user" />
                    <input type="hidden" name="pid" value="318"/>
                    <input type="hidden" name="mid" value="1389"/>
                    <input type="hidden" name="type" value="bug"/>
                    <input type="hidden" name="assigned_to"  value="keldridge"/>
                    <input type="hidden" name="estimated_time" value="1h" />
                    <input type="hidden" name="redirect_url" tal:attributes="value server" />
                </fieldset>
                
                </form>
    			    
                
            </div>

			
		</div>
		
	</div>
	
</html>
