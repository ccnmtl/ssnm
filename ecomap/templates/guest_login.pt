<?xml version="1.0"?>

<html metal:use-macro="sitemacros/macros/ecomap">

	<div metal:fill-slot="content" id="content">
	
		<div id="toolbar">
		
			<div id="standard">
				<a href="#">
					About
				</a>
				<a href="#">
					Help
				</a>
				<a href="#">
					Contact
				</a>
			</div>
			
			<div id="log">
				Logged in as 
				<span tal:content="loginName" />
				| 
				<a href="/logout">
					Logout
				</a>
			</div>
			
		</div>
		
		<div id="breadcrumbbar">
			? 
		</div>
		
		<metal:block define-macro="message">
			<div tal:condition="message" tal:content="message" class="message" />
		</metal:block>
		
		<div id="container">
		
			<h2>
				Guest Login
			</h2>
			
			<form action="/guest_login" method="post">
			
				<fieldset>
				
					<legend>
						Account Information
					</legend>
					
					<label for="username">
						User Name:</label>
					<input id="username" type="text" name="uni" />
					<br />
					<br />
					<label for="pass">
						Password:</label>
					<input id="pass" type="password" name="password" />
					<br />
					<br />
					<label for="login">
					</label>
					<input id="login" type="submit" value="Log In" />
					
				</fieldset>
				
			</form>
			
		</div>
		
	</div>
	
</html>
